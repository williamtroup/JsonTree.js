{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./build",                                  
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,          
    "strict": true,
    "skipLibCheck": true                              
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist","**/*.test.ts"]
}
